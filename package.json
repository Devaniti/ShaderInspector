{
	"name": "shaderinspector",
	"displayName": "Shader Inspector",
	"description": "Extension to compile your shaders and view the assembly",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.69.0"
	},
	"categories": [
		"Other"
	],
	"author": {
		"name": "Dmytro Bulatov"
	},
	"publisher": "DmytroBulatov",
	"activationEvents": [
		"onCommand:shaderinspector.compileWithDXC",
		"onCommand:shaderinspector.repeatLastCompilation",
		"onCommand:shaderinspector.addShaderDeclaration"
	],
	"repository": {
		"url": "https://github.com/Devaniti/ShaderInspector",
		"type": "git"
	},
	"icon": "images/icon.png",
	"keywords": [
		"shader",
		"hlsl"
	],
	"license": "SEE LICENSE IN LICENSE",
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "shaderinspector.compileWithDXC",
				"title": "Shader Inspector: Compile With DXC"
			},
			{
				"command": "shaderinspector.repeatLastCompilation",
				"title": "Shader Inspector: Repeat last compilation"
			},
			{
				"command": "shaderinspector.addShaderDeclaration",
				"title": "Shader Inspector: Add shader declaration"
			}
		],
		"keybindings": [
			{
				"command": "shaderinspector.compileWithDXC",
				"key": "Alt+O",
				"when": "editorLangId == 'hlsl' && editorTextFocus"
			},
			{
				"command": "shaderinspector.repeatLastCompilation",
				"key": "Alt+I"
			},
			{
				"command": "shaderinspector.addShaderDeclaration",
				"key": "Alt+U",
				"when": "editorLangId == 'hlsl' && editorTextFocus"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.69.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"eslint": "^8.18.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.4",
		"@vscode/test-electron": "^2.1.5"
	}
}