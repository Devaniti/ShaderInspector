{
  "name": "shaderinspector",
	"displayName": "ShaderInspector",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.69.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onCommand:shaderinspector.compileWithDXC",
        "onCommand:shaderinspector.repeatLastCompilation",
        "onCommand:shaderinspector.addShaderDeclaration"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "shaderinspector.compileWithDXC",
				"title": "ShaderInspector: Compile With DXC"
			},
			{
				"command": "shaderinspector.repeatLastCompilation",
				"title": "ShaderInspector: Repeat last compilation"
			},
			{
				"command": "shaderinspector.addShaderDeclaration",
				"title": "ShaderInspector: Repeat last compilation"
			}
		],
		"keybindings" : [
			{
				"command": "shaderinspector.compileWithDXC",
				"key": "Alt+O",
				"when": "editorLangId == 'hlsl' && editorTextFocus"
			},
			{
				"command": "shaderinspector.repeatLastCompilation",
				"key": "Alt+I"
			},
			{
				"command": "shaderinspector.addShaderDeclaration",
				"key": "Alt+U",
				"when": "editorLangId == 'hlsl' && editorTextFocus"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.69.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"eslint": "^8.18.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.4",
		"@vscode/test-electron": "^2.1.5"
	}
}
